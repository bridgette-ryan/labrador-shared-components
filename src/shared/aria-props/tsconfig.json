{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext.AsyncIterable", "ES2022"],
    "target": "ES6",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "webpack.config.js"],
  "exclude": ["node_modules", "build", "dist", "public"]
}
